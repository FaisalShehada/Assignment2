<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.faisal.assignmnet2.MainActivity"
    android:background="@drawable/textview_border">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/Clear"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="137dp"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MC"
        android:id="@+id/MemoryClear"
        android:layout_alignTop="@+id/Clear"
        android:layout_toRightOf="@+id/Clear"
        android:layout_toEndOf="@+id/Clear"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MR"
        android:id="@+id/MemoryRecall"
        android:layout_alignTop="@+id/MemoryClear"
        android:layout_toRightOf="@+id/MemoryClear"
        android:layout_toEndOf="@+id/MemoryClear"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M+"
        android:id="@+id/MemoryAdd"
        android:layout_alignTop="@+id/MemoryRecall"
        android:layout_toRightOf="@+id/MemoryRecall"
        android:layout_toEndOf="@+id/MemoryRecall"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/Back"
        android:layout_below="@+id/Clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/MemoryClear"
        android:layout_alignEnd="@+id/MemoryClear"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:id="@+id/Negation"
        android:layout_alignTop="@+id/Back"
        android:layout_alignLeft="@+id/MemoryRecall"
        android:layout_alignStart="@+id/MemoryRecall"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/Div"
        android:layout_alignBottom="@+id/Negation"
        android:layout_toRightOf="@+id/MemoryRecall"
        android:layout_toEndOf="@+id/MemoryRecall"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#ff5500" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:layout_below="@+id/Back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight"
        android:layout_below="@+id/Back"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine"
        android:layout_below="@+id/Negation"
        android:layout_alignLeft="@+id/Negation"
        android:layout_alignStart="@+id/Negation"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/Mul"
        android:layout_below="@+id/Negation"
        android:layout_toRightOf="@+id/Negation"
        android:layout_toEndOf="@+id/Negation"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#ff5500" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:layout_below="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:layout_alignTop="@+id/four"
        android:layout_alignLeft="@+id/eight"
        android:layout_alignStart="@+id/eight"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/five"
        android:layout_alignLeft="@+id/nine"
        android:layout_alignStart="@+id/nine"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/Sub"
        android:layout_below="@+id/nine"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#ff5500" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:layout_below="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/Plus"
        android:layout_below="@+id/six"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#ff5500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Screen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textSize="80dp"
        android:gravity="bottom|right"
        android:textColor="#070707"
        android:layout_above="@+id/MemoryClear"
        android:background="@drawable/textview_border"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:typeface="sans"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zero"
        android:layout_below="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Plus"
        android:layout_toStartOf="@+id/Plus"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/Equal"
        android:textSize="30dp"
        android:layout_below="@+id/Plus"
        android:layout_alignLeft="@+id/Plus"
        android:layout_alignStart="@+id/Plus"
        android:paddingBottom="15dp"
        android:textColor="#ff5500" />
</RelativeLayout>
